<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="container" id="form">
                <h1 style="text-align: center">Edit <%= photo.name %></h1>
                <div style="width: 60%; margin: 25px auto;">
                    <form action="/gallery/<%= photo._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="photo[name]" value="<%= photo.name %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="photo[image]" value="<%= photo.image %>">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" rows="10" type="text" name="photo[description]"><%= photo.description %></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        </div>
                    </form>
                    <a href="/gallery">Go Back</a>
                </div>
        </div>
        
    </div>
</div>
<% include ../partials/footer %>

